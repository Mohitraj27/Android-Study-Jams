<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/screenshot__353_"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp">

    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:text="Your Account Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
       android:id="@+id/text_view_user_full_name"
        tools:text="Mr Fullname User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
        android:id="@+id/text_view_email_address"
        tools:text="email@address.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:layout_marginTop="15dp"
        android:textSize="25sp"
         android:id="@+id/text_view_phone"
        tools:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>